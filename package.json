{
  "name": "linear-sdk",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "dependencies": {
    "@linear/sdk": "^37.0.0",
    "date-fns": "^2.0.0",
    "date-fns-tz": "^2.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.1.4",
    "filenamify": "^4.3.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "eslint": "8.50.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-unicorn": "48.0.1",
    "fs": "^0.0.1-security",
    "lint-staged": "^15.3.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier . --check",
    "lint:js": "eslint \"**/*.js\"",
    "lint:gherkin": "gherkin-lint ./src/features/",
    "lint": "npm run lint:js && npm run lint:gherkin",
    "lint:fix": "npm exec -- prettier \"src/**/*.js\" --check --write && npm exec -- eslint \"src/**/*.js\" --fix && npm run lint:gherkin",
    "pre-commit": "lint-staged",
    "clean:reports": "npx rimraf -y reports",
    "clean:logs": "npx rimraf -y logs/*",
    "check:security": "npm audit --recursive --audit-level=high",
    "compile": "tsc",
    "postprepare": "tsc",
    "build:watch": "tsc --watch",
    "clean:all": "npm run clean:reports && npm run clean:logs && rm -rf dist"
  }
}
